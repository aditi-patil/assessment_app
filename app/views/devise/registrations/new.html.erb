<div class="container" style="padding-top: 90px;">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <a href="/users/sign_in" id="login-form-link">Login</a>
            </div>
            <div class="col-xs-6">
              <a href="/users/sign_up" class="active" id="register-form-link">Register</a>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role:'form', style:'display: block;', id: 'register-form-link') do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
                </div>
                <div class="form-group">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                </div>
                <div class="form-group">
                  <%= f.select :is_admin, options_for_select([['Teacher','true'], ['Student', 'false']]), {}, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <% if @validatable %>
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:"Password" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder:"Confirm Password"%>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit "Register", class:"form-control btn btn-register" %>
                    </div>
                  </div>
                </div>
              </form>
              <% end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
