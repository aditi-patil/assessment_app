<div class="container" style="padding-top: 90px;">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <a href="/users/sign_in" class="active" id="login-form-link">Login</a>
            </div>
            <div class="col-xs-6">
              <a href="/users/sign_up" id="register-form-link">Register</a>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), role:'form', style:'display: block;', id: 'login-form-link') do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.text_field :email, class: 'form-control', placeholder: 'Email / Username' %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:"Password" %>
                </div>
                <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit "Login", class:"form-control btn btn-login" %>
                    </div>
                  </div>
                </div>
              </form>
              <% end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
