<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Assessments</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Marks</th>
        <th>Max time</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @assessments.each do |assessment| %>
        <tr>
          <td><%= assessment.title %></td>
          <td><%= assessment.marks %></td>
          <td><%= assessment.max_time.strftime("%H:%M:%S") %></td>
          <td><%= assessment.start_date %></td>
          <td><%= assessment.end_date %></td>
          <td><%= link_to 'Show', assessment %></td>
          <td><%= link_to 'Edit', edit_assessment_path(assessment) %></td>
          <td><%= link_to 'Destroy', assessment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Assessment', new_assessment_path, class: 'btn btn-default' %>  
</div>
